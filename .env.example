# NTTA Toll Expense Tracker - Environment Variables
# Copy this file to .env.local for local development

# API Configuration
# For production, set this to your backend proxy server URL
# For development, leave blank to use Vite dev proxy
VITE_API_PROXY_URL=

# Logging
# Enable verbose logging in development (logs sensitive data sanitized)
# Set to 'true' for detailed debug logs, 'false' for errors/warnings only
VITE_VERBOSE_LOGS=false

# Session Configuration
# Session timeout in minutes
VITE_SESSION_TIMEOUT_MINUTES=15

# Cache Configuration
# Transaction cache duration in days for old transactions
VITE_CACHE_DURATION_DAYS=7
# Cache duration in hours for recent transactions (last 3 days)
VITE_RECENT_CACHE_HOURS=1

# Build Configuration
VITE_APP_VERSION=1.0.0
